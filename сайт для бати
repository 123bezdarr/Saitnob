    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Электрический фон</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            background: linear-gradient(135deg, #0a0a2a, #1a1a3a, #2a2a4a);
            overflow: hidden;
            position: relative;
        }

        .lines-container {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
        }

        .line {
            position: absolute;
            background: linear-gradient(90deg, transparent, #00ffff, #0066ff, #00ffff, transparent);
            opacity: 0.7;
        }

        .horizontal {
            height: 2px;
            animation: moveHorizontal 8s linear infinite;
            box-shadow: 0 0 10px #00ffff, 0 0 20px #0066ff;
        }

        .vertical {
            width: 2px;
            animation: moveVertical 8s linear infinite;
            box-shadow: 0 0 10px #00ffff, 0 0 20px #0066ff;
        }

        @keyframes moveHorizontal {
            0% {
                transform: translateX(-100%);
                opacity: 0;
            }
            10% {
                opacity: 0.8;
            }
            90% {
                opacity: 0.8;
            }
            100% {
                transform: translateX(100vw);
                opacity: 0;
            }
        }

        @keyframes moveVertical {
            0% {
                transform: translateY(-100%);
                opacity: 0;
            }
            10% {
                opacity: 0.8;
            }
            90% {
                opacity: 0.8;
            }
            100% {
                transform: translateY(100vh);
                opacity: 0;
            }
        }

        .logo-button {
            display: inline-block;
            width: 200px;
            height: 200px;
            background-color: rgba(255, 255, 255, 0.95);
            border-radius: 25px;
            text-align: center;
            line-height: 200px;
            text-decoration: none;
            transition: all 0.3s ease;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.5);
            z-index: 10;
            position: relative;
        }

        .logo-button:hover {
            transform: scale(1.08);
            box-shadow: 0 12px 30px rgba(0, 0, 0, 0.6), 0 0 20px rgba(0, 255, 255, 0.4);
        }

        .logo-button img {
            max-width: 80%;
            max-height: 80%;
            vertical-align: middle;
        }
