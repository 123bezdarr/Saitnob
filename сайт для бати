<body>
    <div class="lines-container" id="linesContainer"></div>
    
    <a href="main.html" class="logo-button">
        <img src="logo.png" alt="Главный логотип">
    </a>

    <script>
        const container = document.getElementById('linesContainer');
        const lineCount = 25;

        for (let i = 0; i < lineCount; i++) {
            createLine();
        }

        function createLine() {
            const line = document.createElement('div');
            line.className = 'line';
            
            const isHorizontal = Math.random() > 0.5;
            
            if (isHorizontal) {
                line.classList.add('horizontal');
                line.style.width = (100 + Math.random() * 200) + 'px';
                line.style.height = (1 + Math.random() * 2) + 'px';
            } else {
                line.classList.add('vertical');
                line.style.height = (100 + Math.random() * 200) + 'px';
                line.style.width = (1 + Math.random() * 2) + 'px';
            }
            
            const posX = Math.random() * window.innerWidth;
            const posY = Math.random() * window.innerHeight;
            const delay = Math.random() * 8;
            const duration = 6 + Math.random() * 4;
            
            line.style.left = posX + 'px';
            line.style.top = posY + 'px';
            line.style.animationDelay = -delay + 's';
            line.style.animationDuration = duration + 's';
            line.style.opacity = 0.3 + Math.random() * 0.4;
            
            container.appendChild(line);
        }

        window.addEventListener('resize', function() {
            const lines = document.querySelectorAll('.line');
            lines.forEach(line => {
                const posX = Math.random() * window.innerWidth;
                const posY = Math.random() * window.innerHeight;
                line.style.left = posX + 'px';
                line.style.top = posY + 'px';
            });
        });
    </script>
</body>
</html>